<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.startup.sheets.FaqBottomSheet"
        android:paddingVertical="48dp"
        android:paddingHorizontal="24dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <!-- UI -->

    <ImageView
            android:importantForAccessibility="no"
            android:src="@android:color/transparent"
            android:foreground="@drawable/xic_x36_uic_line_shield_check"
            android:foregroundGravity="center"
            android:foregroundTint="@android:color/holo_blue_dark"
            android:layout_height="36dp"
            android:layout_width="match_parent" />


    <TextView
            android:text="Credentials"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    <TextView
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="We do not store or have access to your password in any form. If you forget your password or wish to change it, you can reset it at any time through the app’s password recovery feature."
            android:textAppearance="@style/MaterialAlertDialog.Material3.Body.Text"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    <TextView
            android:textSize="14sp"
            android:alpha="0.75"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Learn more"
            android:textAppearance="@style/MaterialAlertDialog.Material3.Body.Text"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_learn_more" />

    <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="36dp"
            app:cardBackgroundColor="@color/material_dynamic_neutral90"
            app:contentPadding="24dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:importantForAccessibility="no"
                        android:src="@android:color/transparent"
                        android:foreground="@drawable/xic_x24_uic_solid_check"
                        android:foregroundGravity="center"
                        android:foregroundTint="@android:color/holo_green_dark"
                        android:layout_marginEnd="12dp"
                        android:layout_height="24dp"
                        android:layout_width="24dp" />

                <TextView
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:text="Length between 6–4096 characters"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:importantForAccessibility="no"
                        android:src="@android:color/transparent"
                        android:foreground="@drawable/xic_x24_uic_solid_check"
                        android:foregroundGravity="center"
                        android:foregroundTint="@android:color/holo_green_dark"
                        android:layout_marginEnd="12dp"
                        android:layout_height="24dp"
                        android:layout_width="24dp" />

                <TextView
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:text="Contains at least one number and one symbol"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                <ImageView
                        android:layout_gravity="start"
                        android:importantForAccessibility="no"
                        android:src="@android:color/transparent"
                        android:foreground="@drawable/xic_x24_uic_solid_check"
                        android:foregroundGravity="center"
                        android:foregroundTint="@android:color/holo_green_dark"
                        android:layout_marginEnd="12dp"
                        android:layout_height="24dp"
                        android:layout_width="24dp" />

                <TextView
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="14sp"
                        android:text="Contains at least one uppercase and one lowercase alphabetical letter"
                        android:textColor="@color/black"
                        app:drawableTint="@color/black" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>